<Application x:Class="MovieMatrix.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:resources="clr-namespace:MovieMatrix.Resources"
             StartupUri="View/MainView.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <x:Static x:Key="ResourceProvider" Member="resources:ResourceProvider.ObjectDataProvider" />
                </ResourceDictionary>
                <ResourceDictionary Source="/Resources/ResourceColors.xaml" />
                <ResourceDictionary Source="/Resources/ResourceFontIcons.xaml" />
                <ResourceDictionary Source="/Resources/ResourceControls.xaml" />
                <ResourceDictionary Source="/Resources/ResourceDataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>

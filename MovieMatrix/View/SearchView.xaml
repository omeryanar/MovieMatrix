<UserControl x:Class="MovieMatrix.View.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:controls="clr-namespace:MovieMatrix.Controls">

    <dx:LoadingDecorator>
        <controls:CardViewControl>
            <controls:CardViewControl.ItemsSource>
                <PriorityBinding>
                    <Binding Path="PageSource" />
                    <Binding Path="Parameter" />
                </PriorityBinding>
            </controls:CardViewControl.ItemsSource>
        </controls:CardViewControl>
    </dx:LoadingDecorator>

</UserControl>

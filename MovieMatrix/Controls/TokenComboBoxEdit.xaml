<dxe:ComboBoxEdit x:Class="MovieMatrix.Controls.TokenComboBoxEdit"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                  xmlns:dxei="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
                  Height="30" FontSize="15" DisplayMember="Name" ValueMember="Id" AllowNullInput="True"
                  IncrementalFiltering="True" ImmediatePopup="True" FilterCondition="Contains"
                  ValidateOnTextInput="False" ValidateOnEnterKeyPressed="True" ProcessNewValue="ProcessNewToken">

    <dxe:ComboBoxEdit.StyleSettings>
        <dxe:TokenComboBoxStyleSettings AllowEditTokens="False" NewTokenPosition="Far">
            <dxe:TokenComboBoxStyleSettings.TokenStyle>
                <Style TargetType="dxei:TokenEditorPresenter">
                    <Setter Property="NewTokenText" Value="" />
                </Style>
            </dxe:TokenComboBoxStyleSettings.TokenStyle>
        </dxe:TokenComboBoxStyleSettings>
    </dxe:ComboBoxEdit.StyleSettings>

</dxe:ComboBoxEdit>

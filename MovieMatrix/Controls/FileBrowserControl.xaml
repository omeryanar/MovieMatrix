<dxg:TreeListControl x:Class="MovieMatrix.Controls.FileBrowserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

    <dxg:TreeListControl.Columns>
        <dxg:TreeListColumn FieldName="Name" />
    </dxg:TreeListControl.Columns>

    <dxg:TreeListControl.View>
        <dxg:TreeListView KeyFieldName="FullPath" ParentFieldName="ParentPath" AllowEditing="False" ShowFilterPanelMode="Never"
                          ShowColumnHeaders="False" ShowHorizontalLines="False" ShowVerticalLines="False" ShowIndicator="False" 
                          ShowNodeImages="True" NodeImageSize="16,16" HighlightItemOnHover="True" AutoExpandAllNodes="True" AutoWidth="True"                          
                          NavigationStyle="Row" VerticalScrollbarVisibility="Auto" EnableDynamicLoading="False">
        </dxg:TreeListView>
    </dxg:TreeListControl.View>

</dxg:TreeListControl>
